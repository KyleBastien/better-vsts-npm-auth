{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "exclude": ["dist/"],
  "include": ["**/*.ts", "!**/*.test.ts"]
}
